{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "../../node_modules/@types", "./@types"],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["./src"],
  "exclude": ["dist"]
}
